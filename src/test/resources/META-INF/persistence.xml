<persistence version="2.0"
	xmlns:jpa="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
  http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<jpa:persistence-unit name="maverikPU"
		transaction-type="RESOURCE_LOCAL">
		<jpa:class>com.maverik.realestate.domain.entity.User</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.UserRoles</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.Company</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.Role</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.Property</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.Project</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.Page</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.ProjectNotes</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PropertyLOI</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PropertyLease</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.LeaseExtension</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PropertyPurchase</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PurchaseExtension</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PropertyContract</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PropertyPermitting</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PropertyNotes</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.Note</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.Filename</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PropertyMeeting</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PermittingAssignmentTask</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PermittingContact</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.ProjectPreConstruction</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PreConstructionType</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.PreConstructionTypeDetails</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.ArchitectDrawing</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.ArchitectDrawingDetails</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.ProjectManagement</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.ProjectCloseOut</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.ProjectRFI</jpa:class>
		<jpa:class>com.maverik.realestate.domain.entity.ProjectASI</jpa:class>
		<jpa:provider>org.hibernate.ejb.HibernatePersistence</jpa:provider>
		<jpa:properties>
			<jpa:property name="hibernate.dialect"
				value="org.hibernate.dialect.SQLServer2008Dialect" />
			<jpa:property name="hibernate.show_sql" value="true" />
			<jpa:property name="hibernate.format_sql" value="true" />	
		</jpa:properties>
	</jpa:persistence-unit>

</persistence>